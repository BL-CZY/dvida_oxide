override MAKEFLAGS += -rR

override IMAGE_NAME := os

KARCH := aarch64

.PHONY: run
run: clean-img kernel $(IMAGE_NAME).iso ovmf
	qemu-system-aarch64 -m 4G \
    -M virt \
    -cpu max \
    -bios ovmf/ovmf-code-$(KARCH).fd \
    -cdrom $(IMAGE_NAME).iso \
    -serial stdio \
    -smp 4 \
    -s

.PHONY: kernel
kernel:
	$(MAKE) -C kernel all KARCH=aarch64

ovmf:
	mkdir -p ovmf
	cd ovmf && \
	curl -Lo ovmf-code-$(KARCH).fd https://retrage.github.io/edk2-nightly/bin/RELEASEX64_OVMF_CODE.fd && \
	curl -Lo ovmf-code-$(KARCH).fd https://retrage.github.io/edk2-nightly/bin/RELEASEX64_OVMF_VAR.fd

.PHONY: clean-img
clean-img:	
	rm -rf iso_root $(IMAGE_NAME).iso $(IMAGE_NAME).hdd

.PHONY: distclean
distclean: clean
	rm -rf limine ovmf
	$(MAKE) -C kernel distclean
